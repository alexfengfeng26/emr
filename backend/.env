# 服务器配置
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# 数据库配置
DATABASE_URL=mysql://root:root@localhost:3306/emr_system

# Redis配置
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-emr-system-2024
JWT_EXPIRES_IN=24h

# CORS配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 医疗标准配置
ENABLE_HL7=true
ENABLE_FHIR=true
FHIR_SERVER_URL=http://localhost:8080/fhir

# FHIR认证配置
FHIR_AUTH_TOKEN=your-fhir-auth-token

# HL7认证配置
HL7_AUTH_TOKEN=your-hl7-auth-token

# HL7消息队列配置
HL7_MESSAGE_QUEUE_ENABLED=true
HL7_BATCH_SIZE=100
HL7_RETRY_ATTEMPTS=3

# 审计日志配置
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION=365

# 数据安全和加密配置
ENCRYPTION_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
BCRYPT_ROUNDS=12

# 安全策略配置
ENABLE_DATA_MASKING=true
ENABLE_XSS_PROTECTION=true
ENABLE_SQL_INJECTION_PROTECTION=true
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true

# 安全头配置
SECURE_HEADERS_ENABLED=true
CORS_STRICT_MODE=true

# 会话安全配置
SESSION_TIMEOUT=30
SESSION_REVOCATION_CHECK=true
ENABLE_SECOND_FACTOR=false

# 性能和缓存配置
CACHE_TTL=3600
CACHE_PREFIX=emr:
SLOW_QUERY_THRESHOLD=1000
MAX_CONCURRENT_REQUESTS=100
RESPONSE_TIME_LIMIT=30000
MAX_REQUEST_SIZE=10485760

# 性能监控配置
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_HISTORY_SIZE=1000
SLOW_REQUEST_THRESHOLD=5000
MEMORY_USAGE_THRESHOLD=0.9

# Redis连接池配置
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20